<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ashis.agricultureexpertsservice">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.ashis.agricultureexpertsservice.View.SplashActivity"
            android:theme="@style/CustomAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.ashis.agricultureexpertsservice.View.SignUpActivity" />
        <activity
            android:name="com.example.ashis.agricultureexpertsservice.DashboardActivity"
            android:label="@string/title_activity_dashboard"
            android:launchMode="singleTop"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name="com.example.ashis.agricultureexpertsservice.View.ShopActivity"
            android:label="@string/title_activity_shop" />
        <activity
            android:name="com.example.ashis.agricultureexpertsservice.View.LoginInActivity"
            android:theme="@style/CustomAppTheme" />
        <activity android:name="com.example.ashis.agricultureexpertsservice.View.ChatDetailActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name="com.example.ashis.agricultureexpertsservice.View.TechnologyDetailActivity" />
        <activity android:name="com.example.ashis.agricultureexpertsservice.View.ShopDetailActivity" />
        <activity android:name="com.example.ashis.agricultureexpertsservice.View.AddPostActivity" />
        <activity
            android:name="com.example.ashis.agricultureexpertsservice.View.PostNavigationActivity"
            android:label="@string/title_activity_post_navigation"
            android:launchMode="singleTop"
            android:theme="@style/CustomAppTheme" />
        <activity android:name="com.example.ashis.agricultureexpertsservice.View.AddProductActivity"></activity>
        <activity android:name="com.example.ashis.agricultureexpertsservice.View.BuyProductActivity"></activity>
    </application>

</manifest>