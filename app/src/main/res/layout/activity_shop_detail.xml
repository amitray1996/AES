<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ShopDetailActivity">

<ImageView
    android:id="@+id/crops_profile"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:src="@drawable/ic_green_beans"
    android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:layout_below="@+id/crops_profile">

        <TextView
            android:id="@+id/title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Green Beans"
            android:textSize="22sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/kilogram"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textSize="18dp"
            android:layout_marginLeft="2sp"
            android:textColor="@android:color/black"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/minus"
                android:layout_width="24dp"
                android:layout_height="24sp"
                android:layout_marginRight="10sp"
                android:src="@drawable/ic_minus"/>

            <TextView
                android:id="@+id/total_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="1 kg"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/plus"
                android:layout_width="9dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"
                android:src="@drawable/ic_plus" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3sp"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs."
            android:textSize="16dp"
            android:includeFontPadding="false"
            android:textColor="#006738"/>

            <TextView
                android:id="@+id/buy_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:includeFontPadding="false"
                android:textColor="@android:color/black"
                android:textSize="16dp" />
            
        </LinearLayout>
        
        <TextView
            android:id="@+id/description_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:text="Description"
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="22dp"/>
        
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Green bean is herbaceous plant that belongs to legume family (Fabiaceae). It originates from Peru, but it can be found around the world today. People cultivate and eat green beans at least 7000 years."
            android:maxLines="4"
            android:ellipsize="end"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            >

            <Button
                android:id="@+id/buy_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BUY NOW"
                android:textSize="16dp"
                android:layout_alignParentBottom="true"
                android:textColor="@android:color/white"
                android:background="@drawable/buy_drawable_layout"
                />

        </RelativeLayout>







    </LinearLayout>


</RelativeLayout>